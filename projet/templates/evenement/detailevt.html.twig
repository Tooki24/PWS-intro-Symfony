{% extends 'base.html.twig' %}

{% block title %}Hello EvenementController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <p>Titre :{{ EvenementChoisi.titre }}</p>
        <p> Nombre max participants : {{ EvenementChoisi.nbpartmax }}</p>
        <p>Adresse : {{ EvenementChoisi.adresse }}</p>

        <p>Membres :
        {%  for membre in EvenementChoisi.membres  %}
            <li>{{ membre.nom }}</li>
        {% endfor %}</p>

    </div>
{% endblock %}
